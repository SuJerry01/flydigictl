    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch flydigid",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/flydigid",
            "args": ["-pretty-logs"],
            "asRoot": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Launch flydigictl",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/flydigictl",
            "args": ["infoa"]
        }
    ]
}